
{
    "languageserver": {
        "coc-clangd": {
            "command": "clangd",
            "filetypes": ["h", "hpp", "c", "cc", "cpp", "c++"],
            "rootPatterns": ["compile_commands.json", ".git"]
        }
    }
};

{
    "languageserver":{
        "coc-python":{
            "command": "pyright"
            "filetypes":["py"]
        }
    }
}

{
    "languageserver": {
        "csharp-ls": {
          "command": "csharp-ls",
          "filetypes": ["cs"],
          "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
        }
    }
}

  "languageserver": {
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": ["cmake"],
      "rootPatterns": [
        "build/"
      ],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    }
  }
